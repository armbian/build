 	if (IS_ENABLED(CONFIG_MACH_SUN8I_R40))
@@ -227,7 +241,7 @@ static void spi0_disable_clock(void)
 	uintptr_t base = spi0_base_address();
 
 	/* Disable the SPI0 controller */
