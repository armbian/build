-		;
+    writel(4 + bufsize, spi_bc_reg); /* Burst counter (total bytes) */
+    writel(4, spi_tc_reg);           /* Transfer counter (bytes to send) */
+    if (spi_bcc_reg)
+        writel(4, spi_bcc_reg);  /* SUN6I also needs this */
