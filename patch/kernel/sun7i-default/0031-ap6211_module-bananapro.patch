+static s32
+wl_cfg80211_del_station(
+	struct wiphy *wiphy,
+	struct net_device *ndev,
+	u8* mac_addr)
+{
+	struct net_device *dev;
+	struct wl_priv *wl = wiphy_priv(wiphy);
+	scb_val_t scb_val;
+	s8 eabuf[ETHER_ADDR_STR_LEN];
+
+	AP6211_DEBUG("Entry\n");
+	if (mac_addr == NULL) {
+		AP6211_DEBUG("mac_addr is NULL ignore it\n");
