+dhd_bus_dpc(struct dhd_bus *bus)
+{
+	bool resched;
+
+	/* Call the DPC directly. */
+	AP6211_DEBUG("Calling dhdsdio_dpc() from %s\n", __FUNCTION__);
+	resched = dhdsdio_dpc(bus);
+
+	return resched;
+}
