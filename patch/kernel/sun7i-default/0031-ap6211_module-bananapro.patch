+	}
+
+	if (bytes_written >= 0) {
+		if ((bytes_written == 0) && (priv_cmd.total_len > 0))
+			command[0] = '\0';
+		if (bytes_written >= priv_cmd.total_len) {
+			AP6211_ERR("%s: bytes_written = %d\n", __FUNCTION__, bytes_written);
