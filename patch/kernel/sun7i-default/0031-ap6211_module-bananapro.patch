+		if (ioc_res < 0) {
+			AP6211_ERR("%s ioc read btc params error\n", __FUNCTION__);
+			break;
+		}
+
+		if ((param27 & 0x6) == 2) { /* count both sco & esco  */
+			sco_id_cnt++;
+		}
+
+		if (sco_id_cnt > 2) {
+			AP6211_DEBUG("%s, sco/esco detected, pkt id_cnt:%d  samples:%d\n",
+				__FUNCTION__, sco_id_cnt, i);
+			res = TRUE;
+			break;
+		}
+
+		msleep(5);
+	}
+
+	return res;
