+
+
+void ap6211_power(int mode, int *updown)
+{
+	if (mode) {
+		if (*updown) {
+			ap6211_gpio_ctrl("ap6211_wl_regon", 1);
+			mdelay(100);
+		} else {
+			ap6211_gpio_ctrl("ap6211_wl_regon", 0);
+			mdelay(100);
+		}
+		AP6211_DEBUG("sdio wifi power state: %s\n", *updown ? "on" : "off");
+	} else {
+		*updown = ap6211_gpio_read("ap6211_wl_regon");
+	}
+
+	return;	
