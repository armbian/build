+
+static int ap6211_gpio_read(char* name)
+{
+	int i = 0;	
+	int gpio = 0;
+	int val = 0;
+	char * gpio_name[3] = {"ap6211_wl_regon", "ap6211_bt_regon", "ap6211_wl_vdd_en"}; /*modify by lemaker team for ap6211*/
