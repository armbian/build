+			AP6211_ERR("WLAN going back to live\n");
+		break;
+
+		case WLAN_POWER_OFF:
+			AP6211_DEBUG("%s: call customer specific GPIO to turn off WL_REG_ON\n",
+				__FUNCTION__);
