+			           __FUNCTION__, dlimagename, dlimagever, dlimagedate);
+			goto err;
+		} else
+			AP6211_ERR("%s: Download, Upload and compare succeeded (%s, %s, %s).\n",
+			           __FUNCTION__, dlimagename, dlimagever, dlimagedate);
+
+	}
+#endif /* DHD_DEBUG */
