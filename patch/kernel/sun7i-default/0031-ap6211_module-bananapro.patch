+static s32
+wl_cfg80211_set_power_mgmt(struct wiphy *wiphy, struct net_device *dev,
+	bool enabled, s32 timeout)
+{
+	s32 pm;
+	s32 err = 0;
+	struct wl_priv *wl = wiphy_priv(wiphy);
+	struct net_info *_net_info = wl_get_netinfo_by_netdev(wl, dev);
+#if !defined(SUPPORT_PM2_ONLY)
+	dhd_pub_t *dhd = (dhd_pub_t *)(wl->pub);
+#endif /* (OEM_ANDROID) */
+	CHECK_SYS_UP(wl);
+
+	if (wl->p2p_net == dev || _net_info == NULL) {
+		return err;
+	}
+	AP6211_DEBUG("%s: Enter power save enabled %d\n", dev->name, enabled);
+
+#if !defined(SUPPORT_PM2_ONLY)
+	/* android has special hooks to change pm when kernel suspended */
+	pm = enabled ? ((dhd->in_suspend) ? PM_MAX : PM_FAST) : PM_OFF;
+#else
+	pm = enabled ? PM_FAST : PM_OFF;
+#endif /* SUPPORT_PM2_ONLY */
+
+	if (_net_info->pm_block || wl->vsdb_mode) {
+		/* Do not enable the power save if it is p2p interface or vsdb mode is set */
+		AP6211_DEBUG("%s:Do not enable the power save for pm_block %d or vsdb_mode %d\n",
+			dev->name, _net_info->pm_block, wl->vsdb_mode);
+		pm = PM_OFF;
+	}
+	pm = htod32(pm);
+	AP6211_DEBUG("%s:power save %s\n", dev->name, (pm ? "enabled" : "disabled"));
+	err = wldev_ioctl(dev, WLC_SET_PM, &pm, sizeof(pm), true);
+	if (unlikely(err)) {
+		if (err == -ENODEV)
+			AP6211_DEBUG("net_device is not ready yet\n");
+		else
+			AP6211_ERR("error (%d)\n", err);
+		return err;
+	}
+	return err;
+}
