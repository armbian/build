+int
+sdioh_sdmmc_card_regread(sdioh_info_t *sd, int func, uint32 regaddr, int regsize, uint32 *data)
+{
+
+	if ((func == 0) || (regsize == 1)) {
+		uint8 temp = 0;
+
+		sdioh_request_byte(sd, SDIOH_READ, func, regaddr, &temp);
+		*data = temp;
+		*data &= 0xff;
+		AP6211_DEBUG("%s: byte read data=0x%02x\n",
+		         __FUNCTION__, *data);
+	} else {
+		sdioh_request_word(sd, 0, SDIOH_READ, func, regaddr, data, regsize);
+		if (regsize == 2)
+			*data &= 0xffff;
+
+		AP6211_DEBUG("%s: word read data=0x%08x\n",
+		         __FUNCTION__, *data);
+	}
+
+	return SUCCESS;
+}
