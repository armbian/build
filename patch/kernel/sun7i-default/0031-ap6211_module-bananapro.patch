+bool
+wl_cfgp2p_bss_isup(struct net_device *ndev, int bsscfg_idx)
+{
+	s32 result, val;
+	bool isup = false;
+	s8 getbuf[64];
+
+	/* Check if the BSS is up */
+	*(int*)getbuf = -1;
+	result = wldev_iovar_getbuf_bsscfg(ndev, "bss", &bsscfg_idx,
+		sizeof(bsscfg_idx), getbuf, sizeof(getbuf), 0, NULL);
+	if (result != 0) {
+		AP6211_ERR("'wl bss -C %d' failed: %d\n", bsscfg_idx, result);
+		AP6211_ERR("NOTE: this ioctl error is normal "
+					"when the BSS has not been created yet.\n");
+	} else {
+		val = *(int*)getbuf;
+		val = dtoh32(val);
+		AP6211_DEBUG("---wl bss -C %d   ==> %d\n", bsscfg_idx, val);
+		isup = (val ? TRUE : FALSE);
+	}
+	return isup;
