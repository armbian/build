+
+		AP6211_DEBUG("MACEVENT: %s, MAC %s\n", event_name, eabuf);
+		break;
+
+	case WLC_E_ASSOC:
+	case WLC_E_REASSOC:
+		if (status == WLC_E_STATUS_SUCCESS) {
+			AP6211_DEBUG("MACEVENT: %s, MAC %s, SUCCESS\n", event_name, eabuf);
