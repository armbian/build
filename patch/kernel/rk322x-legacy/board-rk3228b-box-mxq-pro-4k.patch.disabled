+/dts-v1/;
+
+#include "rk3228b-box.dtsi"
+
+/ {
+
+	model = "MXQ PRO 4K TV Box board";
+
+	wireless-wlan {
+		compatible = "wlan-platdata";
+		rockchip,grf = <&grf>;
+		wifi_chip_type = "ssv6051";
+		sdio_vref = <3300>;
+		WIFI,host_wake_irq = <&gpio0 RK_PD4 GPIO_ACTIVE_HIGH>;
+		status = "okay";
+	};
+
+	gpio-leds {
+
+		compatible = "gpio-leds";
+		pinctrl-names = "default";
+		pinctrl-0 = <&gpio_leds>;
+
+		red {
+			gpios = <&gpio1 7 GPIO_ACTIVE_LOW>;
+			label = "red:state1";
+			linux,default-trigger = "mmc0";
+			default-state = "off";
+		};
+
+		blue {
+			gpios = <&gpio3 21 GPIO_ACTIVE_LOW>;
+			label = "blue:state2";
+			default-state = "on";
+		};
+
+	};
+
+	gpio_keys {
+		compatible = "gpio-keys";
+		#address-cells = <1>;
+		#size-cells = <0>;
+		autorepeat;
+
+		pinctrl-names = "default";
+		pinctrl-0 = <&pwr_key>;
+
+		power_key: power-key {
+			label = "GPIO Key Power";
+			gpios = <&gpio3 RK_PC7 GPIO_ACTIVE_LOW>;
+			linux,code = <KEY_POWER>;
+			debounce-interval = <100>;
+			wakeup-source;
+			status = "okay";
+		};
+	};
+
+	sdio_pwrseq: sdio-pwrseq {
+		compatible = "mmc-pwrseq-simple";
+		pinctrl-names = "default";
+		pinctrl-0 = <&wifi_enable_h>;
+		reset-gpios = <&gpio2 26 GPIO_ACTIVE_LOW>; /* GPIO2_D2 */
+	};
+
+};
+
+/** Integration to pin controller */
+&pinctrl {
+
+	gpio {
+		gpio_leds: gpio-leds {
+			rockchip,pins = <1 7 RK_FUNC_GPIO &pcfg_pull_none>,
+					<3 21 RK_FUNC_GPIO &pcfg_pull_none>;
+		};
+	};
+
+};
+
+/** MMC and NAND controller and interfaces */
+
+&emmc {
+	status = "okay";
+};
+
+&sdio {
+	mmc-pwrseq = <&sdio_pwrseq>;
+	status = "okay";
+};
+
+&sdmmc {
+	status = "okay";
+};
+
+&nandc {
+	status = "okay";
+};
+
+&ir_receiver {
+	linux,rc-map-name = "rc-trn9";
+	status = "okay";
+};
