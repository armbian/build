+static void eink_supply_powerdown_timer(struct timer_list *t)
+{
+	struct eink_dev *eink = from_timer(eink, t, powerdown_timer);
+
+	//dev_info(eink->dev, "powering down");
+
+	spin_lock(&eink->lock);
