+
+        eink->tcon_regs = devm_regmap_init_mmio(dev, tcon_regs, &eink_tcon_regmap_config);
+        if (IS_ERR(eink->tcon_regs)) {
+		ret = PTR_ERR(eink->tcon_regs);
