+	.adaptivity		= rtw8703b_adaptivity,
 	.cfo_init		= NULL,
 	.cfo_track		= NULL,
 	.config_tx_path		= NULL,
@@ -1903,6 +1949,9 @@ const struct rtw_chip_info rtw8703b_hw_spec = {
 	.rx_ldpc = false,
 	.tx_stbc = false,
 	.max_power_index = 0x3f,
