 	.power_off		= rtw_power_off,
@@ -1860,8 +1906,8 @@ static const struct rtw_chip_ops rtw8703b_ops = {
 	.config_bfee		= NULL,
 	.set_gid_table		= NULL,
 	.cfg_csi_rate		= NULL,
-	.adaptivity_init	= NULL,
-	.adaptivity		= NULL,
