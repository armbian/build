@@ -276,6 +276,71 @@ mali: gpu@c0000 {
 			operating-points-v2 = <&gpu_opp_table>;
 			#cooling-cells = <2>; /* min followed by max */
 		};
+
+		vpu: vpu@100000 {
+			compatible = "amlogic,meson8b-vpu";
