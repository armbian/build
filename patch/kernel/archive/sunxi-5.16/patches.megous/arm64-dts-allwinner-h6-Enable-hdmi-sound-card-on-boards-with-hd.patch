 };
 
+&i2s1 {
+	status = "okay";
+};
+
 &mmc0 {
 	pinctrl-names = "default";
 	pinctrl-0 = <&mmc0_pins>;
@@ -127,6 +131,10 @@ &r_ir {
 	status = "okay";
 };
 
+&sound_hdmi {
+	status = "okay";
+};
+
