+	txc_48352_disable_infoframe(priv, TX_PKT_REG_AVI_INFO_BASE_ADDR);
+	txc_48352_disable_infoframe(priv, TX_PKT_REG_EXCEPT0_BASE_ADDR);
+	txc_48352_disable_infoframe(priv, TX_PKT_REG_VEND_INFO_BASE_ADDR);
