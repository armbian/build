From 591b5e8837bcae43a9342790263c69585dbc9ea0 Mon Sep 17 00:00:00 2001
From: Frank Wunderlich <frank-w@public-files.de>
Date: Sun, 26 Oct 2025 17:55:28 +0100
Subject: [PATCH 073/116] arm64: dts: r4pro: add serial 1+2

squashed:
dts: mt7988: Add labels for serial1+2
---
 .../dts/mediatek/mt7988a-bananapi-bpi-r4-pro.dtsi    | 12 ++++++++++++
 arch/arm64/boot/dts/mediatek/mt7988a.dtsi            |  4 ++--
 2 files changed, 14 insertions(+), 2 deletions(-)

diff --git a/arch/arm64/boot/dts/mediatek/mt7988a-bananapi-bpi-r4-pro.dtsi b/arch/arm64/boot/dts/mediatek/mt7988a-bananapi-bpi-r4-pro.dtsi
index f7deb9d2fb70..068e6cbb8cb8 100644
--- a/arch/arm64/boot/dts/mediatek/mt7988a-bananapi-bpi-r4-pro.dtsi
+++ b/arch/arm64/boot/dts/mediatek/mt7988a-bananapi-bpi-r4-pro.dtsi
@@ -596,6 +596,18 @@ &serial0 {
 	status = "okay";
 };
 
+&serial1 {
+	status = "okay";
+	//pinctrl-names = "default";
+	//pinctrl-0 = <&uart1_2_lite_pins>;
+};
+
+&serial2 {
+	status = "okay";
+	//pinctrl-names = "default";
+	//pinctrl-0 = <&uart2_3_pins>;
+};
+
 &spi0 {
 	pinctrl-0 = <&spi0_flash_pins>;
 	pinctrl-names = "default";
diff --git a/arch/arm64/boot/dts/mediatek/mt7988a.dtsi b/arch/arm64/boot/dts/mediatek/mt7988a.dtsi
index 35dc9d034819..00b13cf0a65f 100644
--- a/arch/arm64/boot/dts/mediatek/mt7988a.dtsi
+++ b/arch/arm64/boot/dts/mediatek/mt7988a.dtsi
@@ -352,7 +352,7 @@ serial0: serial@11000000 {
 			status = "disabled";
 		};
 
-		serial@11000100 {
+		serial1: serial@11000100 {
 			compatible = "mediatek,mt7988-uart", "mediatek,mt6577-uart";
 			reg = <0 0x11000100 0 0x100>;
 			interrupts = <GIC_SPI 124 IRQ_TYPE_LEVEL_HIGH>;
@@ -363,7 +363,7 @@ serial@11000100 {
 			status = "disabled";
 		};
 
-		serial@11000200 {
+		serial2: serial@11000200 {
 			compatible = "mediatek,mt7988-uart", "mediatek,mt6577-uart";
 			reg = <0 0x11000200 0 0x100>;
 			interrupts = <GIC_SPI 125 IRQ_TYPE_LEVEL_HIGH>;
