+#endif
+
+	atomic_add(1, &hw_priv->bh_term);
+	wake_up(&hw_priv->bh_wq);
+
+	flush_workqueue(hw_priv->bh_workqueue);
+
+	destroy_workqueue(hw_priv->bh_workqueue);
+	hw_priv->bh_workqueue = NULL;
+
+	bes2600_info(BES2600_DBG_BH, "[BH] unregistered.\n");
