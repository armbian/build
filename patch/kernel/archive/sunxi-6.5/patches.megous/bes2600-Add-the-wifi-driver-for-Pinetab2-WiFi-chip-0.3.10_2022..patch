+	err = bes2600_btusb_rx_submit(data, NULL);
+	if (!err) {
+		for (i = 1; i < BES2600_BTUSB_MAX_BULK_RX; i++)
+			bes2600_btusb_rx_submit(data, NULL);
+	}
+
+	write_unlock_irqrestore(&data->lock, flags);
+	return err;
+}
