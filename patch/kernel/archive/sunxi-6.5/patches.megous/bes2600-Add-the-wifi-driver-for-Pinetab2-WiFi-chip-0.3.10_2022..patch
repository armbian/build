+static int bes2600_itp_close(struct inode *inode, struct file *file)
+{
+	struct bes2600_common *priv = file->private_data;
+	struct bes2600_itp *itp = &priv->debug->itp;
+	if (!atomic_dec_return(&itp->open_count)) {
