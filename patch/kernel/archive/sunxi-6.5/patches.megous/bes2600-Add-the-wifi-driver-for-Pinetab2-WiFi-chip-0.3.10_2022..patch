+		if (retries >= 5) {
+			ret = -EIO;
+			bes2600_err(BES2600_DBG_SPI, "bes2600 spi deactive(%d) failed\n", sub_system);
+			goto exit;
+		}
+
+		if (sub_system == SUBSYSTEM_MCU)
+			self->spi_active = false;
+
+		if (sub_system == SUBSYSTEM_WIFI)
+			bes2600_spi_work_empty(self);
+
+	} else {
+		return 0;
+	}
+
+exit:
+	bes2600_spi_unlock(self);
+	return ret;
+}
