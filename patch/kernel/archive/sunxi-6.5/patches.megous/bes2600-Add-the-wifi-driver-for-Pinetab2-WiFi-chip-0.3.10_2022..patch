+	memcpy(&self->tx_dummy_buf[buf_pos], &done_addr, 4);
+	memcpy(&self->tx_dummy_buf[buf_pos + 4], &done_val, 4);
+	t_cmd->tx_buf = self->tx_dummy_buf;
+	t_cmd->rx_buf = self->rx_dummy_buf;
+	t_cmd->len = buf_pos;
+	t_cmd->speed_hz = self->func->max_speed_hz;
+
