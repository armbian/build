+	}
+
+
+	temp_fw_data->sbus_ops->irq_unsubscribe(temp_fw_data->sbus_priv);
+	kfree(temp_fw_data);
+
+	bes2600_info(BES2600_DBG_DOWNLOAD, "download finished ,wifi_state:%d result is %d\n", bes2600_chrdev_is_wifi_opened(), ret);
