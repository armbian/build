+/* Checksum a block of data */
+static uint16_t csum(uint16_t *packet, int packlen)
+{
+	uint32_t sum = 0;
+
+	while (packlen > 1) {
+		sum += *(packet++);
+		packlen -= 2;
+	}
+
+	if (packlen > 0)
+		sum += *(unsigned char *)packet;
+
+	while (sum >> 16)
+		sum = (sum & 0xffff) + (sum >> 16);
+
+	return (uint16_t) ~sum;
+}
