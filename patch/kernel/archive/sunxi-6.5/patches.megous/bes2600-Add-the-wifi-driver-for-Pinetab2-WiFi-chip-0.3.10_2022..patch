+		pipe_num = BES2600_USB_PIPE_TX_CTRL;
+		*urb_count = TX_URB_COUNT;
+		break;
+	case BES2600_USB_EP_ADDR_WLAN_OUT:
+		pipe_num = BES2600_USB_PIPE_TX_WLAN;
+		*urb_count = TX_URB_COUNT;
+		break;
