+		if(bes2600_cdev.bton_pending) {
+			bes2600_info(BES2600_DBG_CHARDEV, "execute pending bt on operation.\n");
+			bes2600_chrdev_switch_subsys(GPIO_WAKE_FLAG_BT_ON, SUBSYSTEM_BT, true);
