+		int retries;
+
+		if (sub_system == SUBSYSTEM_MCU) {
+			subint = BES_SUBSYSTEM_MCU_DEACTIVE;
+			cfm = BES_SLAVE_STATUS_MCU_WAKEUP_READY;
