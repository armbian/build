+static int bes2600_sdio_reg_read(struct sbus_priv *self, u32 reg,
+					void *dst, int count)
+{
+	int ret = 0;
+	if (count <= 0 || !dst)
+		return -EINVAL;
+	while(count && !ret) {
+		*(u8 *)dst = sdio_readb(self->func, reg, &ret);
+		dst ++;
+		reg ++;
+		count--;
+	}
+	return ret;
+
+}
