+	int ret;
+
+	/* Filling the Template Frame Hdr */
+	tmp_frame[0] = stream_idx;
+	tmp_frame[1] = 0xFF; /* Fixed to 0xFF */
+	((u16 *)&tmp_frame[2])[0] = 0;
+
+	ret = WARN_ON(wsm_write_mib(hw_priv,
+                                WSM_MIB_ID_EXT_TCP_KEEP_ALIVE_FRAME,
+                                tmp_frame,
+                                4,
+                                priv->if_id));
+
+	return ret;
+}
