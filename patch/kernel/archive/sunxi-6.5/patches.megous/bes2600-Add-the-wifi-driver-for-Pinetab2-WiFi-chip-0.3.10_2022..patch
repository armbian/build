+		retries = 0;
+		do {
+			if ((ret = bes2600_spi_reg_write(self, BES_HOST_SUBINT_REG_ID, &subint, 4)))
+				goto exit;
+			if ((ret = bes2600_spi_reg_write(self, BES_HOST_INT_REG_ID, &int_type, 4)))
+				goto exit;
