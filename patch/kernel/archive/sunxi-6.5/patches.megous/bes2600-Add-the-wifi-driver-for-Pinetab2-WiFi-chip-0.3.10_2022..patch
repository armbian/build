+void coex_calc_wifi_scan_time(uint32_t *min_chan, uint32_t *max_chan)
+{
+	uint32_t time = coex_calc_bt_time();
+
+	if (time == 0) {
+		*min_chan = 90;
+		*max_chan = 90;
+	} else if (time < 40000) {
+		*min_chan = 50;
+		*max_chan = 110;
+	} else if (time < 60000) {
+		*min_chan = 40;
+		*max_chan = 110;
+	} else if (time < 80000) {
+		*min_chan = 30;
+		*max_chan = 120;
+	} else {
+		*min_chan = 30;
+		*max_chan = 130;
+	}
+}
