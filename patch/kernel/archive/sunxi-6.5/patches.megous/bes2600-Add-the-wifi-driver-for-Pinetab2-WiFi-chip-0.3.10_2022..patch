+
+		bes2600_info(BES2600_DBG_CHARDEV, "wakup proc on wq of probe_done.\n");
+	} else {
+		spin_lock(&bes2600_cdev.status_lock);
+		bes2600_cdev.wait_state = BES2600_BOOT_WAIT_NONE;
+		bes2600_cdev.bus_error = error;
+		if(bes2600_cdev.bus_error) {
