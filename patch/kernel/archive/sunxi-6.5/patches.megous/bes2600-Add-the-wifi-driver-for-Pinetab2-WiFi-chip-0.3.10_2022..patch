+void bes2600_recv_buf_put(struct sbus_priv *ar_usb, struct sk_buff *skb)
+{
+	unsigned long flags;
+	if (!skb)
+		return;
+
+	spin_lock_irqsave(&ar_usb->rx_queue_lock, flags);
+	skb_queue_tail(&ar_usb->rx_queue, skb);
+	spin_unlock_irqrestore(&ar_usb->rx_queue_lock, flags);
