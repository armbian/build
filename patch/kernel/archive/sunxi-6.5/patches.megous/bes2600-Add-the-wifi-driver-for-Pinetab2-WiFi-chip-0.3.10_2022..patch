+		return -EINVAL;
+
+	spin_lock(&self->tx_bufferlock);
+	list_add_tail(&desc->node, &self->tx_bufferlist);
+	self->tx_data_cnt++;
+	spin_unlock(&self->tx_bufferlock);
+	queue_work(self->sdio_wq, &self->tx_work);
+	return 0;
+
