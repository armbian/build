+		return;
+	}
+
+	if (hw_priv->bh_error) {
+		bes2600_err(BES2600_DBG_BH, "%s bh error", __func__);
+		return;
+	}
+
+	if (atomic_add_return(1, &hw_priv->bh_rx) == 1)
+		wake_up(&hw_priv->bh_wq);
