+	bes2600_dbg(BES2600_DBG_BH,  "[BH] wakeup.\n");
+	if (WARN_ON(hw_priv->bh_error))
+		return;
+
+	if (atomic_add_return(1, &hw_priv->bh_tx) == 1)
+		wake_up(&hw_priv->bh_wq);
