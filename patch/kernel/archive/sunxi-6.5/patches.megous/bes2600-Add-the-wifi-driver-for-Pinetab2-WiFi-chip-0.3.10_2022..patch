+				bes2600_bh_parse_data_pkt(hw_priv, skb);
+			} else {
+				bes2600_info(BES2600_DBG_BH, "Host was waked by unexpected frame, fctl:0x%04x\n", fctl);
+			}
+		} else {
+			bes2600_info(BES2600_DBG_BH, "Host was waked by event:0x%04x.\n", wsm_id);
+		}
+	}
