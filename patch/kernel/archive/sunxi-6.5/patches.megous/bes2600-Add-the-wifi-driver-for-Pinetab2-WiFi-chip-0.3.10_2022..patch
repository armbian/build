+
+			src_u8 = (u8 *)src;
+			if ((count % 4) == 1) {
+				self->tx_dummy_buf[buf_pos ++] = 0;
+				self->tx_dummy_buf[buf_pos ++] = 0;
+				self->tx_dummy_buf[buf_pos ++] = 0;
+				self->tx_dummy_buf[buf_pos ++] = src_u8[src_pos ++];
+			} else if ((count % 4) == 2) {
+				self->tx_dummy_buf[buf_pos ++] = 0;
+				self->tx_dummy_buf[buf_pos ++] = 0;
+				self->tx_dummy_buf[buf_pos ++] = src_u8[src_pos + 1];
+				self->tx_dummy_buf[buf_pos ++] = src_u8[src_pos];
