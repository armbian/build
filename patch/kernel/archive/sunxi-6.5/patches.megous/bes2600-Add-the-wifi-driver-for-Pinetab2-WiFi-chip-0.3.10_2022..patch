+static int bes2600_gpio_wakeup_ap_config(struct sbus_priv *self)
+{
+	u8 wakeup_cfg = 0;
+	int ret = 0, irq_flags = 0, irq = 0;
+
+    if (!bes2600_chrdev_is_signal_mode())
+        return 0;
+
+#if defined(PLAT_ALLWINNER)
+	irq_flags = sunxi_wlan_get_oob_irq_flags();
