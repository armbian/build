From eb579827db142f772767debb36289d2f17cfd59c Mon Sep 17 00:00:00 2001
From: Jianhua Lu <lujianhua000@gmail.com>
Date: Sun, 9 Nov 2025 23:46:00 +0800
Subject: [PATCH 58/62] arm64: dts: qcom: sm8250-xiaomi-elish: add reset pin
 setting for panel

Signed-off-by: Jiali Chen <chenjiali@radxa.com>
---
 .../dts/qcom/sm8250-xiaomi-elish-common.dtsi  | 19 +++++++++++++++++++
 1 file changed, 19 insertions(+)

diff --git a/arch/arm64/boot/dts/qcom/sm8250-xiaomi-elish-common.dtsi b/arch/arm64/boot/dts/qcom/sm8250-xiaomi-elish-common.dtsi
index 1b8d04bb8f2d..bfac7ab3aed6 100644
--- a/arch/arm64/boot/dts/qcom/sm8250-xiaomi-elish-common.dtsi
+++ b/arch/arm64/boot/dts/qcom/sm8250-xiaomi-elish-common.dtsi
@@ -834,6 +834,11 @@ display_panel: panel@0 {
 		reg = <0>;
 		vddio-supply = <&vreg_l14a_1p88>;
 		reset-gpios = <&tlmm 75 GPIO_ACTIVE_LOW>;
+
+		pinctrl-names = "default", "sleep";
+		pinctrl-0 = <&panel_default>;
+		pinctrl-1 = <&panel_sleep>;
+
 		backlight = <&backlight>;
 		rotation = <90>;
 
@@ -1178,6 +1183,20 @@ dout-pins {
 		};
 	};
 
+	panel_default: panel-default-state {
+		pins = "gpio75";
+		function = "gpio";
+		drive-strength = <8>;
+		bias-disable;
+	};
+
+	panel_sleep: panel-sleep-state {
+		pins = "gpio75";
+		function = "gpio";
+		drive-strength = <2>;
+		bias-pull-down;
+	};
+
 	keyboard_vdd_pin: keyboard-vdd-state {
 		pins = "gpio127";
 		function = "gpio";
