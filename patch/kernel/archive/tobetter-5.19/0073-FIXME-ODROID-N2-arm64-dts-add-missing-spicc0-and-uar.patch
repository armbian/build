Date: Sat, 7 Aug 2021 15:17:41 +0900
Subject: [PATCH 73/99] (FIXME) ODROID-N2: arm64/dts: add missing 'spicc0' and
 'uart_B'

Signed-off-by: Dongjin Kim <tobetter@gmail.com>
Change-Id: Ie6dd9a692d8c44f1b44eb690f1f792d0a454edeb
---
 .../dts/amlogic/meson-g12b-odroid-n2.dtsi     | 23 +++++++++++++++++++
 1 file changed, 23 insertions(+)

diff --git a/arch/arm64/boot/dts/amlogic/meson-g12b-odroid-n2.dtsi b/arch/arm64/boot/dts/amlogic/meson-g12b-odroid-n2.dtsi
index 97c1f5a7b48b..0b81f7bcd400 100644
--- a/arch/arm64/boot/dts/amlogic/meson-g12b-odroid-n2.dtsi
+++ b/arch/arm64/boot/dts/amlogic/meson-g12b-odroid-n2.dtsi
@@ -13,11 +13,13 @@ / {
 	aliases {
 		serial0 = &uart_AO;
 		serial1 = &uart_A;
+		serial2 = &uart_B;
 		ethernet0 = &ethmac;
 		i2c0 = &i2c2;
 		i2c1 = &i2c3;
 		rtc0 = &rtc;
 		rtc1 = &vrtc;
+		spi0 = &spicc0;
 	};
 
 	dio2133: audio-amplifier-0 {
@@ -708,12 +710,33 @@ &toddr_c {
 	status = "okay";
 };
 
+&spicc0 {
+	status = "disabled";
+
+	pinctrl-names = "default";
+	pinctrl-0 = <&spicc0_x_pins>;
+
+	spidev@0 {
+		status = "okay";
+
+		compatible = "linux,spidev";
+		reg = <0>;
+		spi-max-frequency = <100000000>;
+	};
+};
+
 &uart_A {
 	status = "okay";
 	pinctrl-names = "default";
 	pinctrl-0 = <&uart_a_pins>;
 };
 
+&uart_B {
+        status = "disabled";
+        pinctrl-names = "default";
+        pinctrl-0 = <&uart_b_pins>;
+};
+
 &uart_AO {
 	status = "okay";
 	pinctrl-0 = <&uart_ao_a_pins>;
