From 916b9a4592699d919ebebcbe1718760ed5bd1b63 Mon Sep 17 00:00:00 2001
From: Lee Seungcheol <john.lee@hardkernel.com>
Date: Thu, 6 May 2021 15:25:39 +0900
Subject: [PATCH 83/99] ODROID-C4: arm64/dts: make I2C0, I2C1 disabled by
 default and add DTBOs of them

Change-Id: I7ac97c6400bc75b72865593e0ca8cfd2b9fe7ac5
Signed-off-by: Lee Seungcheol <john.lee@hardkernel.com>
---
 arch/arm64/boot/dts/amlogic/meson-sm1-odroid-c4.dts |  5 +++++
 arch/arm64/boot/dts/amlogic/meson64_odroidc4.dts    | 12 ++++++++++++
 .../boot/dts/amlogic/overlays/odroidc4/Makefile     |  6 ++++--
 .../boot/dts/amlogic/overlays/odroidc4/i2c0.dts     | 13 +++++++++++++
 .../boot/dts/amlogic/overlays/odroidc4/i2c1.dts     | 13 +++++++++++++
 5 files changed, 47 insertions(+), 2 deletions(-)
 create mode 100644 arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c0.dts
 create mode 100644 arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c1.dts

diff --git a/arch/arm64/boot/dts/amlogic/meson-sm1-odroid-c4.dts b/arch/arm64/boot/dts/amlogic/meson-sm1-odroid-c4.dts
index cb4c818e9e96..7b8d97351b9c 100644
--- a/arch/arm64/boot/dts/amlogic/meson-sm1-odroid-c4.dts
+++ b/arch/arm64/boot/dts/amlogic/meson-sm1-odroid-c4.dts
@@ -11,6 +11,11 @@ / {
 	compatible = "hardkernel,odroid-c4", "amlogic,sm1";
 	model = "Hardkernel ODROID-C4";
 
+	aliases {
+		i2c0 = &i2c2;
+		i2c1 = &i2c3;
+	};
+
 	leds {
 		compatible = "gpio-leds";
 
diff --git a/arch/arm64/boot/dts/amlogic/meson64_odroidc4.dts b/arch/arm64/boot/dts/amlogic/meson64_odroidc4.dts
index a21bf0f5c0fb..d132109a0099 100644
--- a/arch/arm64/boot/dts/amlogic/meson64_odroidc4.dts
+++ b/arch/arm64/boot/dts/amlogic/meson64_odroidc4.dts
@@ -47,6 +47,18 @@ &external_phy {
 	/delete-property/	interrupts-parent;
 };
 
+&i2c2 {
+	status = "disabled";
+	pinctrl-names = "default";
+	pinctrl-0 = <&i2c2_sda_x_pins>, <&i2c2_sck_x_pins>;
+};
+
+&i2c3 {
+	status = "disabled";
+	pinctrl-names = "default";
+	pinctrl-0 = <&i2c3_sda_a_pins>, <&i2c3_sck_a_pins>;
+};
+
 &gpu_opp_table {
 	opp-999999984 {
 		opp-hz = /bits/ 64 <999999984>;
diff --git a/arch/arm64/boot/dts/amlogic/overlays/odroidc4/Makefile b/arch/arm64/boot/dts/amlogic/overlays/odroidc4/Makefile
index 02864e3402ba..289a2bbda1a4 100644
--- a/arch/arm64/boot/dts/amlogic/overlays/odroidc4/Makefile
+++ b/arch/arm64/boot/dts/amlogic/overlays/odroidc4/Makefile
@@ -1,6 +1,9 @@
 dtbo-y += \
+	hifishield2.dtbo \
 	hktft32.dtbo \
 	hktft35.dtbo \
+	i2c0.dtbo \
+	i2c1.dtbo \
 	pcf8563.dtbo \
 	spi0.dtbo \
 	sx865x-i2c1.dtbo \
@@ -9,8 +12,7 @@ dtbo-y += \
 	uart2.dtbo \
 	uart3.dtbo \
 	w1-gpio_p15.dtbo \
-	w1-gpio_p22.dtbo \
-	hifishield2.dtbo
+	w1-gpio_p22.dtbo
 
 targets += $(dtbo-y)
 always-y := $(dtbo-y)
diff --git a/arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c0.dts b/arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c0.dts
new file mode 100644
index 000000000000..a225d47fcd46
--- /dev/null
+++ b/arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c0.dts
@@ -0,0 +1,13 @@
+/dts-v1/;
+/plugin/;
+
+/ {
+	fragment@0 {
+		target = <&i2c2>;
+
+		__overlay__ {
+			status = "okay";
+			clock-frequency = <100000>;
+		};
+	};
+};
diff --git a/arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c1.dts b/arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c1.dts
new file mode 100644
index 000000000000..880e19952d5b
--- /dev/null
+++ b/arch/arm64/boot/dts/amlogic/overlays/odroidc4/i2c1.dts
@@ -0,0 +1,13 @@
+/dts-v1/;
+/plugin/;
+
+/ {
+	fragment@0 {
+		target = <&i2c3>;
+
+		__overlay__ {
+			status = "okay";
+			clock-frequency = <100000>;
+		};
+	};
+};
