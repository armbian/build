+static int ac200_get_ssr(unsigned int sample_rate)
+{
+	int i;
+
+	for (i = 0; i < ARRAY_SIZE(ac200_ssr_map); i++) {
+		const struct ac200_map *ssr = &ac200_ssr_map[i];
+
+		if (ssr->match == sample_rate)
+			return ssr->value;
+	}
+
+	return -EINVAL;
+}
