+++ b/drivers/gpu/drm/drm_prime.c
@@ -832,6 +832,37 @@ struct sg_table *drm_prime_pages_to_sg(struct drm_device *dev,
 }
 EXPORT_SYMBOL(drm_prime_pages_to_sg);
 
