+&i2c4 {
+	
+	status = "okay";
+
+	rk1000_ctl: rk1000-ctl@40 {
+		compatible = "rockchip,rk1000-ctl";
+		reg = <0x40>;
+		reset-gpios = <&gpio7 21 GPIO_ACTIVE_LOW>;
