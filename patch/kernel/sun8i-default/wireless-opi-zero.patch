+{
+	u8 *ies;
+	u32 ies_len;
+	u32 ie_len;
+	u32 p2p_ie_len = 0;
+	u32 wps_ie_len = 0;
+	scan_printk(XRADIO_DBG_TRC,"%s\n", __func__);
