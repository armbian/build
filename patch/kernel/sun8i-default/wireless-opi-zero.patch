+	if (sdio_self.load_state == SDIO_UNLOAD) {
+		spin_lock_init(&sdio_self.lock);
+		init_waitqueue_head(&sdio_self.init_wq);
+
+		//setup sdio driver.
+		ret = sdio_register_driver(&sdio_driver);
+		if (ret) {
