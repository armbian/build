+
+	seq_puts(seq, "\n");
+
+	for (i = 0; i < MAX_STA_IN_AP_MODE; ++i) {
+		if (priv->link_id_db[i].status) {
+			seq_printf(seq, "Link %d:     %s, %pM\n",
