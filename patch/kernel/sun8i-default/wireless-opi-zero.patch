+static ssize_t xradio_fwreg_rw(struct file *file,
+	const char __user *user_buf, size_t count, loff_t *ppos)
+{
+	struct xradio_common *hw_priv = file->private_data;
+	char  buf[256] = {0};
+	u16   buf_size = (count > 255 ? 255 : count);
+	char* startptr = &buf[0];
