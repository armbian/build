+static int xradio_get_hw_type(u32 config_reg_val, int *major_revision)
+{
+	int hw_type  = -1;
+	u32 hif_type = (config_reg_val >> 24) & 0x4;
+	//u32 hif_vers = (config_reg_val >> 31) & 0x1;
+
+	/* Check if we have XRADIO*/
+  if (hif_type == 0x4) {
+		*major_revision = 0x4;
+		hw_type = HIF_HW_TYPE_XRADIO;
+	} else {
+		//hw type unknown.
+		*major_revision = 0x0;
+	}
+	return hw_type;
+}
