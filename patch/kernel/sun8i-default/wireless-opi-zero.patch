+	hw->wiphy->max_remain_on_channel_duration = 500;
+	hw->channel_change_time = 500;	/* TODO: find actual value */
+	hw->extra_tx_headroom = WSM_TX_EXTRA_HEADROOM +
+	                        8  /* TKIP IV */      +
+	                        12 /* TKIP ICV and MIC */;
+	hw->wiphy->bands[IEEE80211_BAND_2GHZ] = &xradio_band_2ghz;
