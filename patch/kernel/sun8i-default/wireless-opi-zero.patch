+		//detect sdio card.
+		xradio_sdio_detect(1);
+		if (wait_event_interruptible_timeout(sdio_self.init_wq,
+			sdio_self.load_state == SDIO_LOAD, 2*HZ) <= 0) {
+			sdio_unregister_driver(&sdio_driver);
