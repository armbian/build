+		printk(KERN_ERR "[XRADIO] ERR, %s:File is not allow to write!\n", 
+		       __FUNCTION__);
+		goto exit;
+	} else {
+		set_fs(KERNEL_DS);
+		if (fp_log->f_op->llseek != NULL) {
+			vfs_llseek(fp_log, 0, SEEK_END);
+		} else {
