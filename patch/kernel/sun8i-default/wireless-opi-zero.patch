+	ret = sdio_release_irq(self->func);
+	sdio_release_host(self->func);
+#else
+	xradio_free_gpio_irq(&(self->func->dev), self);
+#endif  //CONFIG_XRADIO_USE_GPIO_IRQ
+
+	spin_lock_irqsave(&self->lock, flags);
+	self->irq_priv = NULL;
+	self->irq_handler = NULL;
