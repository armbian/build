+			mod_timer(&queue->gc, jiffies);
+			txrx_printk(XRADIO_DBG_NIY,"!lock queue\n");
+		}
+	} else {
+		ret = -ENOENT;
+	}
+#if 0
+	txrx_printk(XRADIO_DBG_ERROR, "queue_put queue %d, %d, %d\n",
