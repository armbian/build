+	*/
+	sta_printk(XRADIO_DBG_MSG, "Interface ID:%d of type:%d added\n",
+	           priv->if_id, priv->mode);
+	mutex_unlock(&hw_priv->conf_mutex);
+
+	xradio_vif_setup(priv);
+
