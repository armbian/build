 }
 
 /* D1P & D2 ? */
@@ -91,13 +85,6 @@ void spacemit_top_off(u_register_t mpidr)
 	value |= (1 << 2) | (1 << 0);
 	writel(value, (unsigned int *)PMU_ACPR_UNKONW_REG);
 
