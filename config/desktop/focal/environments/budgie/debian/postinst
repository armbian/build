# overwrite stock lightdm greeter configuration
if [ -d /etc/armbian/lightdm ]; then cp -R /etc/armbian/lightdm /etc/; fi
if [ -f /etc/lightdm/slick-greeter.conf ]; then sed '/^armbian03-Dre0x-Minum-dark-blurred-3840x2160.jpg s/armbian_4k_purplepunk_resultado.jpg' /etc/lightdm/slick-greeter.conf; fi

# Disable Pulseaudio timer scheduling which does not work with sndhdmi driver
if [ -f /etc/pulse/default.pa ]; then sed "s/load-module module-udev-detect$/& tsched=0/g" -i  /etc/pulse/default.pa; fi

# set wallpapper to armbian

keys=/etc/dconf/db/local.d/00-desktop
profile=/etc/dconf/profile/user

install -Dv /dev/null $keys
install -Dv /dev/null $profile

# gather dconf settings
# org/budgie/ > budgie_desktop_backup

echo "[org/budgie/desktop/background]
picture-options='zoom'
picture-uri='file:///usr/share/backgrounds/armbian/armbian_4k_purplepunk_resultado.jpg'
primary-color='#456789'
secondary-color='#FFFFFF'

[org/budgie/desktop/screensaver]
picture-options='zoom'
picture-uri='file:///usr/share/backgrounds/armbian/armbian_4k_gray_guass_purplepunk_resultado.jpg'
primary-color='#456789'
secondary-color='#FFFFFF'

[org/budgie/desktop/interface]
cursor-theme='whiteglass'
gtk-theme='Numix'
icon-theme='Numix'
scaling-factor=uint32 0

[org/budgie/desktop/wm/preferences]
theme='Numix'

[org/budgie/settings-daemon/plugins/xsettings]
buttons-have-icons=true
menus-have-icons=true" >> $keys

echo "user-db:user
system-db:local" >> $profile

dconf update

#re-compile schemas
if [ -d /usr/share/glib-2.0/schemas ]; then
	glib-compile-schemas /usr/share/glib-2.0/schemas
fi