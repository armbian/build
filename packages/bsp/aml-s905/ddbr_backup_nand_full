#!/bin/sh

echo "START ddBR NAND"

if [ ! -d /ddbr ] ; then
    mkdir /ddbr;chmod 777 /ddbr
fi

dd if=/dev/dtb of=/ddbr/dtb.img conv=fsync
dd if=/dev/boot of=/ddbr/boot.img conv=fsync
dd if=/dev/recovery of=/ddbr/recovery.img conv=fsync
dd if=/dev/bootloader of=/ddbr/bootloader.img conv=fsync
dd if=/dev/logo of=/ddbr/logo.img conv=fsync
dd if=/dev/misc of=/ddbr/misc.img conv=fsync
dd if=/dev/system of=/ddbr/system.img bs=32M conv=fsync
dd if=/dev/data of=/ddbr/data.img bs=32M conv=fsync

sync

echo "STOP ddBR NAND"
