[Unit]
Description=Bluetooth Orangepi RV2
After=bluetooth.target

[Service]
Type=simple
ExecStartPre=/usr/sbin/rfkill unblock all
ExecStart=/usr/bin/brcm_patchram_plus --enable_hci --no2bytes --tosleep 200000 --baudrate 1500000 --patchram /lib/firmware/BCM4345C5.hcd /dev/ttyS1
TimeoutSec=0
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
