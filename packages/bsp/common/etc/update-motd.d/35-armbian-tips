# DO NOT EDIT THIS FILE but add config options to /etc/default/armbian-motd
# any changes will be lost on board support package update

THIS_SCRIPT="tips"
MOTD_DISABLE=""

[[ -f /etc/default/armbian-motd ]] && . /etc/default/armbian-motd

for f in $MOTD_DISABLE; do
	[[ $f == $THIS_SCRIPT ]] && exit 0
done

quotes="/etc/update-motd.d/quotes.txt"
if [[ -f $quotes && $(( $RANDOM % 1 )) == 0 ]]; then
        random_line=$(shuf -i 1-$(wc -l < $quotes) -n 1)
        quote=$(sed -n -e "$random_line"p $quotes)
	CURRENT_DATE=$(echo $quote | cut -d"|" -f1)
	CURRENT_QUOTE=$(echo $quote | cut -d"|" -f2)
        if [[ -n $CURRENT_QUOTE && $(date +'%Y-%m-%d') < $(date -d $CURRENT_DATE +"%Y-%m-%d") ]]; then
		echo -e "\e[93mTip of the day:\e[39m $CURRENT_QUOTE\n"
	fi
fi
