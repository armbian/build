[Unit]
Description=Enable Wake-on-LAN for Helios4 eth0
After=network-online.target
Wants=network-online.target

[Service]
ExecStart=/bin/sh -c 'for INTF in `/bin/ls -1 /sys/class/net/ | /bin/grep -E "^(eth|en[do])[0-9]+"` ; do echo /sbin/ethtool -s "${INTF}" wol g ; done'
Type=oneshot

[Install]
WantedBy=multi-user.target
